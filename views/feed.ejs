    <script>
        // Add click functionality to pin cards
        document.querySelectorAll('.pin-card').forEach(card => {
            card.addEventListener('click', function(e) {
                e.stopPropagation();
                
                // Remove clicked class from all other cards
                document.querySelectorAll('.pin-card').forEach(otherCard => {
                    if (otherCard !== this) {
                        otherCard.classList.remove('clicked');
                    }
                });
                
                // Toggle clicked state on current card
                this.classList.toggle('clicked');
            });
        });

        // Remove overlay when clicking outside
        document.addEventListener('click', function() {
            document.querySelectorAll('.pin-card').forEach(card => {
                card.classList.remove('clicked');
            });
        });

        // Prevent save button from bubbling up
        document.querySelectorAll('.save-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                alert('Pin saved!');
                this.closest('.pin-card').classList.remove('clicked');
            });
        });

        // Search functionality
        const searchBar = document.querySelector('.search-bar');
        searchBar.addEventListener('focus', function() {
            this.style.background = '#fff';
        });

        searchBar.addEventListener('blur', function() {
            if (!this.value) {
                this.style.background = '#e1e1e1';
            }
        });

        // Responsive navigation for mobile
        const navTabs = document.querySelector('.nav-tabs');
        let isScrolling = false;

        navTabs.addEventListener('wheel', function(e) {
            if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) {
                e.preventDefault();
                this.scrollLeft += e.deltaX;
            }
        });

        // Tab switching functionality
        document.querySelectorAll('.tab').forEach((tab, index) => {
            tab.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remove active class from all tabs
                document.querySelectorAll('.tab').forEach(t => {
                    t.style.background = '';
                    t.style.color = '';
                });
                
                // Add active class to clicked tab
                this.style.background = '#111';
                this.style.color = 'white';
            });
        });
    </script>
